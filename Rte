        <!-- Navigation Controls -->
        <div class="nav-controls">
            <div class="nav-btn" id="prev-btn">
                <i class="fas fa-chevron-left"></i>
            </div>
            <div class="nav-btn" id="next-btn">
                <i class="fas fa-chevron-right"></i>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.slide');
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const navDots = document.getElementById('nav-dots');
            const progressBar = document.getElementById('progress-bar');
            const increaseFontBtn = document.getElementById('increase-font');
            const decreaseFontBtn = document.getElementById('decrease-font');
            let currentSlide = 0;
            
            // Font size control
            let fontSize = 1.3;
            let titleSize = 2.5;
            let cardTitleSize = 1.5;
            
            function updateFontSizes() {
                document.documentElement.style.setProperty('--font-size', `${fontSize}rem`);
                document.documentElement.style.setProperty('--title-size', `${titleSize}rem`);
                document.documentElement.style.setProperty('--card-title-size', `${cardTitleSize}rem`);
            }
            
            increaseFontBtn.addEventListener('click', () => {
                fontSize = Math.min(2.0, fontSize + 0.1);
                titleSize = Math.min(3.5, titleSize + 0.2);
                cardTitleSize = Math.min(2.2, cardTitleSize + 0.15);
                updateFontSizes();
            });
            
            decreaseFontBtn.addEventListener('click', () => {
                fontSize = Math.max(1.0, fontSize - 0.1);
                titleSize = Math.max(1.8, titleSize - 0.2);
                cardTitleSize = Math.max(1.2, cardTitleSize - 0.15);
                updateFontSizes();
            });
            
            // Create navigation dots
            slides.forEach((slide, index) => {
                const dot = document.createElement('div');
                dot.classList.add('nav-dot');
                if (index === 0) dot.classList.add('active');
                dot.addEventListener('click', () => goToSlide(index));
                navDots.appendChild(dot);
            });
            
            // Update slide numbers
            function updateSlideNumbers() {
                document.querySelectorAll('.slide-number').forEach((el, index) => {
                    el.textContent = `${index + 1}/${slides.length}`;
                });
            }
            
            // Initialize the first slide
            showSlide(currentSlide);
            updateSlideNumbers();
            
            // Navigation functions
            function showSlide(index) {
                slides.forEach(slide => slide.classList.remove('active'));
                slides[index].classList.add('active');
                
                // Update dots
                document.querySelectorAll('.nav-dot').forEach((dot, i) => {
                    if (i === index) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                    
                    // Mark previous slides as completed
                    if (i < index) {
                        dot.classList.add('completed');
                    } else {
                        dot.classList.remove('completed');
                    }
                });
                
                // Update progress bar
                progressBar.style.width = `${(index / (slides.length - 1)) * 100}%`;
                
                currentSlide = index;
            }
            
            function goToSlide(index) {
                if (index >= 0 && index < slides.length) {
                    showSlide(index);
                }
            }
            
            function nextSlide() {
                if (currentSlide < slides.length - 1) {
                    goToSlide(currentSlide + 1);
                }
            }
            
            function prevSlide() {
                if (currentSlide > 0) {
                    goToSlide(currentSlide - 1);
                }
            }
            
            // Event listeners for navigation
            nextBtn.addEventListener('click', nextSlide);
            prevBtn.addEventListener('click', prevSlide);
            
            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowRight' || e.key === ' ') nextSlide();
                if (e.key === 'ArrowLeft') prevSlide();
            });
            
            // Initialize split-screen slides
            function initializeSplitScreen(slideNum) {
                const cont = document.getElementById(`split-container-${slideNum}`);
                const left = document.getElementById(`split-left-${slideNum}`);
                const drag = document.getElementById(`dragger-${slideNum}`);
                const url = document.getElementById(`url-${slideNum}`);
                const load = document.getElementById(`load-${slideNum}`);
                const viewer = document.getElementById(`viewer-${slideNum}`);
                const swap = document.getElementById(`swap-${slideNum}`);
                const slides = [...document.querySelectorAll(`#slides-${slideNum} .split-slide-content`)];

                // Load link
                load.addEventListener('click', () => {
                    try{
                        const val = url.value.trim();
                        if(!val) return alert('Type a link');
                        viewer.src = val;
                    }catch(e){alert('Invalid URL')}
                });

                // drag to resize (25% -> 50% typical)
                let dragging=false;
                drag.addEventListener('pointerdown', e=>{dragging=true;document.body.style.userSelect='none'});
                window.addEventListener('pointerup', ()=>{dragging=false;document.body.style.userSelect=''});
                window.addEventListener('pointermove', e=>{
                    if(!dragging) return;
                    const pct = Math.max(20, Math.min(70, (e.clientX/window.innerWidth)*100));
                    left.style.flexBasis = pct + '%';
                });

                // swap
                swap.addEventListener('click', () => {
                    cont.insertBefore(cont.lastElementChild, cont.firstElementChild);
                });

                // slide nav
                for(let i = 1; i <= slides.length; i++) {
                    document.getElementById(`n${i}-${slideNum}`).addEventListener('click', () => showSplitSlide(i-1));
                }
                
                function showSplitSlide(i){
                    slides.forEach(s=>s.classList.toggle('active', Number(s.dataset.i)===i));
                }
            }
            
            // Initialize all split-screen slides
            initializeSplitScreen(10);
            initializeSplitScreen(11);
            initializeSplitScreen(12);
        });
    </script>
</body>
</html>
